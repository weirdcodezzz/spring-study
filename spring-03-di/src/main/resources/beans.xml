<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="user-bean.xml"/>


    <bean id="address" class="com.luo.pojo.Address">
        <property name="address" value="内江"/>
    </bean>

    <bean id="student" class="com.luo.pojo.Student">
        <!-- 第一种：普通值注入，value -->
        <property name="name" value="小罗"/>

        <!-- 第二种：Bean注入，ref -->
        <property name="address" ref="address"/>

        <!-- 第三种：数组注入 -->
        <property name="book">
            <array>
                <value>《红楼梦》</value>
                <value>《西游记》</value>
                <value>《水浒传》</value>
                <value>《三国演义》</value>
            </array>
        </property>

        <!-- 第四种：List注入 -->
        <property name="hobbies">
            <list>
                <value>吃饭</value>
                <value>睡觉</value>
                <value>打豆豆</value>
            </list>
        </property>

        <!-- 第五种：Map注入 -->
        <property name="cards">
            <map>
                <entry key="学生卡" value="201731062523"/>
                <entry key="公交卡" value="天府通"/>
                <entry key="饭卡" value="干饭人"/>
            </map>
        </property>

        <!-- 第六种：set注入 -->
        <property name="games">
            <set>
                <value>英雄联盟</value>
                <value>植物大战僵尸</value>
            </set>
        </property>

        <!-- 第七种：null值注入 -->
        <property name="wife">
            <null/>
        </property>

        <!-- 第八种：Properties注入 -->
        <property name="info">
            <props>
                <prop key="姓名">小罗</prop>
                <prop key="爱好">女</prop>
                <prop key="学号">201731062523</prop>
            </props>
        </property>
    </bean>

</beans>